<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginBottom="8dp"
    android:elevation="4dp">

    <!-- TextView for Image Displayer on the Left -->
    <ImageView
        android:id="@+id/image_display"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:contentDescription="Property Image" />

    <!-- Container for TextViews on the Right -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/property_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/property_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa Chỉ: "
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/property_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành Phố: "
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/property_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tỉnh/Thành Phố: "
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/property_postal_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã Bưu Điện: "
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/property_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại chính: "
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/property_fax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số Fax: "
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/property_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chủ sở hữu: "
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/property_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số Đơn Vị: "
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/property_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại Bất Động Sản: "
            android:paddingTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#1E90FF"
                android:text="Edit" />

            <Button
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#1E90FF"
                android:text="Delete" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

