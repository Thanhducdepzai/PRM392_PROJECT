<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Name Input -->
    <EditText
        android:id="@+id/etPropertyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Property Name" />

    <!-- Address Input -->
    <EditText
        android:id="@+id/etPropertyAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address" />

    <!-- City Input -->
    <EditText
        android:id="@+id/etPropertyCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City" />

    <!-- State Input -->
    <EditText
        android:id="@+id/etPropertyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="State" />

    <!-- Postal Code Input -->
    <EditText
        android:id="@+id/etPropertyPostalCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Postal Code" />

    <!-- Main Phone Input -->
    <EditText
        android:id="@+id/etPropertyMainPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Main Phone" />

    <!-- Fax Number Input -->
    <EditText
        android:id="@+id/etPropertyFaxNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fax Number" />

    <!-- Unit Count Input -->
    <EditText
        android:id="@+id/etPropertyUnitCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Unit Count" />

    <!-- Property Type Input -->
    <EditText
        android:id="@+id/etPropertyType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Property Type" />

    <!-- Image Selection Button -->
    <Button
        android:id="@+id/btnChooseImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1E90FF"
        android:text="Choose Image" />

    <!-- Preview ImageView -->
    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:visibility="gone"/>

    <!-- Add Button -->
    <Button
        android:id="@+id/btnAddProperty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1E90FF"
        android:text="Add Property" />
</LinearLayout>